// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Item {
  id          Int     @default(autoincrement()) @id
  title       String
  description String
  image       String?
  largeImage  String?
  price       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime?
  // user: User
}
