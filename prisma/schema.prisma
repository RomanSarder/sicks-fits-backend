// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Permission {
  ADMIN
  USER
  ITEMCREATE
  ITEMDELETE
  ITEMUPDATE
  PERMISSIONUPDATE
}

model Item {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  image       String?
  largeImage  String?
  price       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime?
  // user: User
}

model User {
  id          Int     @id @default(autoincrement())
  name        String
  email       String  @unique
  password    String
  resetToken  String?
  resetTokenExpiry Float?
  permissions Permission[]
}